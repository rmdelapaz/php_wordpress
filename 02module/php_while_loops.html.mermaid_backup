    <text x="516.6666666666667" y="195.0" text-anchor="middle" 
          class="node-text" font-size="12">False</text>
    <line x1="633.3333333333334" y1="200" x2="283.33333333333337" y2="200" 
          class="connection-line" marker-end="url(#arrow)"/>
    <text x="458.33333333333337" y="195.0" text-anchor="middle" 
          class="node-text" font-size="12">&gt;|True| C[Execute Code Block] C </text>
    <line x1="633.3333333333334" y1="200" x2="516.6666666666667" y2="200" 
          class="connection-line" marker-end="url(#arrow)"/>
    <text x="575.0" y="195.0" text-anchor="middle" 
