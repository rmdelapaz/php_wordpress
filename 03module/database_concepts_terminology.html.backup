                        wctx.fillText('views page', 70, 215);
                        
                        wctx.fillText('PHP processes', 200, 200);
                        wctx.fillText('request', 220, 215);
                        
                        wctx.fillText('Stores posts,', 385, 200);
                        wctx.fillText('users, settings', 380, 215);
                        
                        // Example data
                        wctx.fillStyle = '#6b7280';
